doctype html
html
  head
    title ISSO Seva
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='assets/css/main.css')
  body.homepage
    #page-wrapper
      #header-wrapper.wrapper
        #header
          #logo
            img(src='images/seva_logo.png')
            div
              h1
                a(href='index.html') ISSO Seva
              h2 Be Human, Serve Humanity
          nav#nav
            ul
              li.current
                a(href='/') Home
              li
                a(href='#projects') Projects
              li
                a(href='#contact-us') Contact Us
              li
                a(href='https://blog.issoseva.org' target='_blank') Blog
              li
                a(href=info.donate_url, target='_blank') Donate
    #intro-wrapper.wrapper.style1
      section#intro.container
        h2.style1= info.mission
    .wrapper.style2
      #main.container
        section#features
          header.style1
            h2 Over the last past decade we have served:
          .feature-list
            - const numStats = stats.length
            - const rows = [stats.splice(0, numStats), stats.splice(numStats)]
            each row in rows
              .row
                each stat in row
                  div(class='6u 12u(mobile)')
                    section
                      h3.icon.fa-refresh= stat.name
          ul.actions.actions-centered
            li
              a.button.style1.big(href=info.donate_url, target='_blank') Donate
    .wrapper.style3
      .title Upcoming events
      #highlights.container
        .row(class='150%')
          - events = events.filter(i => i.visibility === 'published')
          each event in events
            div(class='4u 12u(mobile)')
              section.highlight
                a.image.featured(href='#')
                  img(src=(event.image || '/images/pic02.jpg'), alt='')
                h3
                  a(href='#')= `${event.name} at ${event.location}`
                p
                  = `Date: ${event.date}`
                  br
                  = event.blurb || '<no blurb>'
                //
                  ul.actions
                    li
                      a.button.style1(href='#') Learn more

    #footer-wrapper.wrapper
      #projects.title Projects
      #footer.container
        header.style1
          p= info.top_programs_blurb
        br
        section
          - projects = projects.filter(i => i.visibility === 'published')
          each project, idx in projects
            .grid-flex
              .col.col-image(style=`background-image: url(${project.image || '/images/pic02.jpg'})`)
              .col.col-text(class=(idx % 2 == 0 ? '' : 'col-left'))
                .aligner-item
                  h3= project.name
                  br
                  p= project.blurb
                  p= project.author || ''

    //
      .wrapper.style3
        .title Testimonials
        #highlights.container
          .row(class='150%')
            each testimonial in testimonials
              div(class='4u 12u(mobile)')
                section.highlight
                  a.image.featured(href='#')
                    img(src=(testimonial.image || 'images/pic02.jpg'), alt='')
                  h3
                    a(href='#')= testimonial.person
                  p= testimonial.blurb
    .wrapper.style2
      #main.container
        section#features
          header.style1
            h2 Our Location
            //
              #map
              script.
                function initMap() {
                  const coords = {#{gps_coords}}
                  const map = new google.maps.Map(document.getElementById('map'), {zoom: 4, center: coords})
                  const marker = new google.maps.Marker({position: coords, map: map })
                }
              script(async='', defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyB2-KnJv_UsnYEF_I2uhjmF5wbQR57bdOE&callback=initMap')
    #footer-wrapper.wrapper
      #contact-us.title Contact Us
      #footer.container
        //
          header.style1
            h2 Ipsum sapien elementum portitor?
            p
              | Sed turpis tortor, tincidunt sed ornare in metus porttitor mollis nunc in aliquet.
              br
              | 								Nam pharetra laoreet imperdiet volutpat etiam consequat feugiat.
          hr
        .row(class='150%')
          div(class='6u 12u(mobile)')
            section
              form(method='post', action='/email')
                .row(class='50%')
                  div(class='6u 12u(mobile)')
                    input#contact-name(type='text', name='name', placeholder='Name')
                  div(class='6u 12u(mobile)')
                    input#contact-email(type='text', name='email', placeholder='Email')
                .row(class='50%')
                  div(class='12u')
                    textarea#contact-message(name='message', placeholder='Message', rows='4')
                .row
                  div(class='12u')
                    ul.actions
                      li
                        input.style1(type='submit', value='Send')
                      li
                        input.style2(type='reset', value='Reset')
          div(class='6u 12u(mobile)')
            section.feature-list.small
              .row
                div(class='6u 12u(mobile)')
                  section
                    h3.icon.fa-home Mailing Address
                    - const addressLines = info.address.split('\n')
                    p
                      each line in addressLines
                        = line
                        br
                div(class='6u 12u(mobile)')
                  section
                    h3.icon.fa-comment Social
                    - const socialLinks = info.social_links.split('\n')
                    p
                      each link in socialLinks
                        a(href=link, target='_blank')= link.replace(/^https?:\/\//,'')
                        br
              .row
                div(class='6u 12u(mobile)')
                  section
                    h3.icon.fa-envelope Email
                    p
                      a(href='#')= info.email
                div(class='6u 12u(mobile)')
                  section
                    h3.icon.fa-phone Phone
                    p= info.phone
        hr
      #copyright
        ul
          li Â© ISSO Seva
